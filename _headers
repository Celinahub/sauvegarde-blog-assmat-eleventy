# SÃ©curisation des ressources
Content-Security-Policy: default-src 'self'; script-src 'self' https://trusted-cdn.com; style-src 'self' 'unsafe-inline'; img-src 'self' https://trusted-cdn.com; font-src 'self' https://trusted-cdn.com;
X-Frame-Options: SAMEORIGIN
X-Content-Type-Options: nosniff
Referrer-Policy: no-referrer-when-downgrade
Permissions-Policy: camera=(), microphone=(), geolocation=(self), fullscreen=(self)

# Cache les fichiers CSS pendant 1 an
/css/*
  Cache-Control: public, max-age=31536000, immutable

# Cache les fichiers JS pendant 1 an
/js/*
  Cache-Control: public, max-age=31536000, immutable

# Cache les images pendant 1 an
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache les fonts (polices) pendant 1 an
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Autres ressources comme le fichier Bootstrap
/bootstrap.min.css
  Cache-Control: public, max-age=31536000, immutable

