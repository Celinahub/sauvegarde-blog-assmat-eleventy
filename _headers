  Content-Security-Policy: default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://static.elfsight.com https://unpkg.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data:; font-src 'self' https://cdn.jsdelivr.net https://fonts.gstatic.com; frame-ancestors 'self';

  # Empêche le site d’être inclus dans des iframes externes
  X-Frame-Options: SAMEORIGIN

  # Empêche le navigateur de deviner les types de fichiers
  X-Content-Type-Options: nosniff

  # Politique stricte de referrer
  Referrer-Policy: strict-origin-when-cross-origin

  # Restrictions des API sensibles
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # Force l’utilisation du HTTPS
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload