 <!-- SEO Metadata -->
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="keywords" content="{{ tags or 'blog, articles, ' ~ metadata.title | safe }}">
  <meta name="robots" content="index, follow">

  <!-- Open Graph Metadata -->
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:description" content="{{ description or metadata.description }}">
  <meta property="og:image" content="{{ image or metadata.socialImage | url }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:url" content="{{ page.url | absoluteUrl }}">
  <meta property="og:site_name" content="{{ metadata.title }}">
  <meta property="og:type" content="website">
  <meta name="pinterest-rich-pin" content="true">

  <!-- Twitter Metadata -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or metadata.title }}">
  <meta name="twitter:description" content="{{ description or metadata.description }}">
  <meta name="twitter:image" content="{{ image or metadata.socialImage | url }}">
  <meta name="twitter:site" content="{{ metadata.twitter or '@yourtwitterhandle' }}">

  <!-- Lien vers le flux RSS -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} - Flux RSS" href="{{ site.url }}/rss.xml" />

  <!-- Theme Color -->
  <meta name="theme-color" content="#F8F9F6">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ page.url | absoluteUrl('https://chubert91assmat.netlify.app') }}">

  <!-- Préchargement des polices -->
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet"></noscript>

  <!-- Préchargement CSS -->
  <link rel="preload" href="{{ '/css/style.css' | url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="{{ '/css/style.css' | url }}"></noscript>

  <!-- Préchargement de l'image LCP -->
  <link rel="preload" as="image" href="/images/presentation/reconversion.jpg">

  <!-- Lien vers les styles Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

  <!-- Icônes Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

  <!-- Favicon -->
  <link rel="icon" href="{{ '/favicon.ico' | url }}" type="image/x-icon">