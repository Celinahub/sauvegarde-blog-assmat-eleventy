<!-- SEO Metadata -->
<title>{{ title or metadata.title }}</title>
<meta name="description" content="{{ description or metadata.description }}">
<meta name="keywords" content="{{ tags or 'blog, articles, ' ~ metadata.title | safe }}">
<meta name="robots" content="index, follow">

<!-- Open Graph Metadata (Facebook, LinkedIn, Pinterest) -->
<meta property="og:title" content="{{ title or metadata.title }}">
<meta property="og:description" content="{{ description or metadata.description }}">
<meta property="og:image" content="{{ image | absoluteUrl or metadata.socialImage | absoluteUrl }}">
<meta property="og:url" content="{{ page.url | absoluteUrl }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:type" content="website">
<meta name="pinterest-rich-pin" content="true">

<!-- Twitter Metadata -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or metadata.title }}">
<meta name="twitter:description" content="{{ description or metadata.description }}">
<meta name="twitter:image" content="{{ image or metadata.socialImage | url }}">
<meta name="twitter:site" content="{{ metadata.twitter or '@yourtwitterhandle' }}">

<!-- Lien vers le flux RSS -->
<link rel="alternate" type="application/rss+xml" title="{{ site.title }} - Flux RSS" href="{{ site.url }}/rss.xml" />

<!-- Theme Color -->
<meta name="theme-color" content="#F8F9F6">

<!-- Canonical URL -->
<link rel="canonical" href="{{ page.url | absoluteUrl('https://chubert91assmat.netlify.app') }}">

<!-- Lien vers les styles Bootstrap et CSS personnalisés -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link rel="stylesheet" href="{{ '/css/style.css' | url }}">
<link rel="icon" href="{{ '/favicon.ico' | url }}" type="image/x-icon">

<!-- Polices Google -->
<!-- Préconnexions prioritaires -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Optimisation des polices Google avec preload -->
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Finger+Paint:wght@400&display=swap">
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;0,800;0,900&display=swap">

<!-- Chargement des polices avec font-display: swap (éviter la duplication) -->
<link href="https://fonts.googleapis.com/css2?family=Finger+Paint:wght@400&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;0,800;0,900&display=swap" rel="stylesheet">

<!-- Font Awesome optimisé (préchargement du CSS) -->
<link rel="preload" as="style" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">




