<!-- SEO Metadata -->
<title>{{ title or metadata.title }}</title>
<meta name="description" content="{{ description or metadata.description }}">
<meta name="keywords" content="{{ tags or 'blog, articles, ' ~ metadata.title | safe }}">
<meta name="robots" content="index, follow">

<!-- Open Graph Metadata (Facebook, LinkedIn, Pinterest) -->
<meta property="og:title" content="{{ title or metadata.title }}">
<meta property="og:description" content="{{ description or metadata.description }}">
<meta property="og:image" content="{{ image | absoluteUrl or metadata.socialImage | absoluteUrl }}">
<meta property="og:url" content="{{ page.url | absoluteUrl }}">
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:type" content="website">
<meta name="pinterest-rich-pin" content="true">

<!-- Twitter Metadata -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or metadata.title }}">
<meta name="twitter:description" content="{{ description or metadata.description }}">
<meta name="twitter:image" content="{{ image | absoluteUrl or metadata.socialImage | absoluteUrl }}">
<meta name="twitter:site" content="{{ metadata.twitter or '@yourtwitterhandle' }}">

<!-- Lien vers le flux RSS -->
<link rel="alternate" type="application/rss+xml" title="{{ site.title }} - Flux RSS" href="{{ site.url }}/rss.xml" />

<!-- Theme Color -->
<meta name="theme-color" content="#F8F9F6">

<!-- Canonical URL -->
<link rel="canonical" href="{{ page.url | absoluteUrl('https://chubert91assmat.netlify.app') }}">

<!-- Préconnexions prioritaires -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Optimisation des polices Google avec preload -->
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Finger+Paint:wght@400&display=swap" 
      as="style" 
      crossorigin="anonymous" 
      onload="this.onload=null;this.rel='stylesheet'">

<link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;0,800;0,900&display=swap" 
      as="style" 
      crossorigin="anonymous" 
      onload="this.onload=null;this.rel='stylesheet'">

<!-- Chargement des polices Google -->
<noscript>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Finger+Paint:wght@400&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;0,800;0,900&display=swap">
</noscript>



<!-- Lien vers le CSS de Bootstrap et CSS personnalisés -->
