      as="style" 
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
      crossorigin="anonymous" 
      onload="this.onload=null;this.rel='stylesheet'">

<noscript>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
          rel="stylesheet" 
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
          crossorigin="anonymous">
</noscript>


<!-- Précharger le fichier CSS personnalisé -->
<link rel="preload" href="{{ '/css/style.css' | url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
  
<!-- Lien classique vers le CSS personnalisé -->
<link rel="stylesheet" href="{{ '/css/style.css' | url }}">

<!-- Favicon -->
<link rel="icon" href="{{ '/favicon.ico' | url }}" type="image/x-icon">

