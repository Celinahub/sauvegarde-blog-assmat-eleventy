<script>
    function copyLink(button) {
    let relativeUrl = button.getAttribute('data-url');
    // Ajouter le domaine √† l'URL relative pour cr√©er une URL absolue
    const absoluteUrl = `${window.location.origin}${relativeUrl}`;

    // Copier l'URL absolue dans le presse-papiers
    if (navigator.clipboard) {
        navigator.clipboard.writeText(absoluteUrl)
            .then(() => alert("Lien copi√© dans le presse-papiers !"))
            .catch(err => console.error("Impossible de copier le lien :", err));
    } else {
        const tempInput = document.createElement("input");
        tempInput.value = absoluteUrl;
        document.body.appendChild(tempInput);
        tempInput.select();
        try {
            document.execCommand("copy");
            alert("Lien copi√© dans le presse-papiers !");
        } catch (err) {
            console.error("Impossible de copier le lien :", err);
        }
        document.body.removeChild(tempInput);
    }
}
</script>


<script>
window.onload = () => {
  function initializeLikeButtons() {
    document.querySelectorAll('.like-button').forEach(button => {
      const postId = button.getAttribute('data-id');
      const sanitizedPostId = encodeURIComponent(postId); // Encodage pour correspondre aux IDs HTML
      const likeCountElement = document.getElementById(`like-count-${sanitizedPostId}`);

      if (!likeCountElement) {
        console.error('Like count element not found for post', postId);
        return;
      }

      // üîπ R√©cup√©rer le nombre de likes depuis Supabase avec debug
      (async () => {
        try {
          const response = await fetch(`/.netlify/functions/like?post_id=${postId}`);
          const text = await response.text(); // Lire la r√©ponse brute avant JSON.parse

          console.log("Raw response:", text); // üîç Voir la r√©ponse avant de la parser

          const data = JSON.parse(text); // ‚ö† Peut √©chouer si ce n'est pas du JSON
          
          console.log("Parsed JSON:", data); // V√©rifier le JSON retourn√©
          likeCountElement.textContent = data.likes || 0;
        } catch (error) {
          console.error('Error fetching likes:', error);
        }
      })();

      // üîπ Ajouter un √©v√©nement au clic pour incr√©menter les likes
      button.addEventListener('click', async function () {
        try {
          const response = await fetch('/.netlify/functions/like', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ post_id: postId }),
          });

          const text = await response.text(); // Lire la r√©ponse brute avant JSON.parse
          console.log("Raw response on like:", text); // üîç Voir la r√©ponse avant de la parser

          const result = JSON.parse(text);

          if (result.message === "Like added successfully") {
            likeCountElement.textContent = parseInt(likeCountElement.textContent) + 1;
          } else {
            alert('Error: ' + result.message);
          }
        } catch (error) {
          console.error('Error on like button click:', error);
        }
      });
    });
  }

  // üîπ Ex√©cuter l'initialisation d√®s que le DOM est charg√©
  initializeLikeButtons();

  // üîπ Observer si des nouveaux √©l√©ments sont ajout√©s dynamiquement
  const observer = new MutationObserver(() => {
    initializeLikeButtons();
  });

  observer.observe(document.body, { childList: true, subtree: true });
};

</script>


